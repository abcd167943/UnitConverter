<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_convert"
    tools:context=".ConvertBaseActivity">

    <Spinner
        android:id="@+id/sourcespinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"/>

    <EditText
        android:id="@+id/sourcevalue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sourcespinner"
        android:hint="@string/source_value"
        android:textSize="25sp"
        android:inputType="numberDecimal|numberSigned"
        android:maxLength="12" />


    <EditText
        android:id="@+id/resultvalue"
        android:layout_below="@id/sourcevalue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/result_value"
        android:inputType="numberDecimal|numberSigned"
        android:textSize="25sp" />

    <Spinner
        android:id="@+id/resultspinner"
        android:layout_below="@id/resultvalue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"/>

    <ImageButton android:id="@+id/swapbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="center"
        android:src="@drawable/ic_swap_vertical"
        android:layout_below="@id/resultspinner"/>


</RelativeLayout>
